DSO = yes

OPENCL = yes

OPENCL_HOME = /usr/local/cuda
OPENCL_FLAGS = -I$(OPENCL_HOME)/include  -L$(OPENCL_HOME)/lib64  -lOpenCL -DOPENCL=yes   -lm -DOPENCL_FROM_SOURCE

CUDA = yes
CUDA_HOME = /usr/local/cuda
CUDA_FLAGS = -I$(CUDA_HOME)/include -L$(CUDA_HOME)/lib -L$(CUDA_HOME)/lib64  -lcuda -lcudart -lm 

CC = gcc 
CXX =  g++
